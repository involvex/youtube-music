# Environment Variables Template
# Copy this file to .env.development or .env.production and customize as needed

# Server Configuration
NODE_ENV=development
BUN_ENV=development
DEV_SERVER_PORT=3000
HMR_PORT=3001
HMR_HOST=localhost

# API Configuration
API_BASE_URL=https://music.youtube.com
WS_URL=ws://localhost:3001

# Feature Flags
ENABLE_HMR=true
ENABLE_PROXY=true
ENABLE_CORS=true

# Build Configuration
SOURCE_MAP=true
MINIFY=false
SPLITTING=false
TREE_SHAKING=true

# Development Tools
ENABLE_DEBUG=true
ENABLE_LOGGING=true
ENABLE_INSPECTOR=false

# Performance
WATCH_MODE=true
HOT_RELOAD=true
LIVE_RELOAD=true

# Security
CSP_ENABLED=false
HTTPS_ENABLED=false

# Optimization
BUNDLE_SIZE_LIMIT=1MB
CHUNK_SIZE_LIMIT=500KB
ASSET_SIZE_LIMIT=100KB

# CDN Configuration
CDN_BASE_URL=/
PUBLIC_PATH=/
ASSET_HASH=true