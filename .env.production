# Production Environment Variables for Bun Build

# Server Configuration
NODE_ENV=production
BUN_ENV=production
DEV_SERVER_PORT=3000
HMR_PORT=3001
HMR_HOST=localhost

# API Configuration
API_BASE_URL=https://music.youtube.com
WS_URL=ws://localhost:3001

# Feature Flags
ENABLE_HMR=false
ENABLE_PROXY=false
ENABLE_CORS=true

# Build Configuration
SOURCE_MAP=false
MINIFY=true
SPLITTING=true
TREE_SHAKING=true

# Development Tools
ENABLE_DEBUG=false
ENABLE_LOGGING=false
ENABLE_INSPECTOR=false

# Performance
WATCH_MODE=false
HOT_RELOAD=false
LIVE_RELOAD=false

# Security
CSP_ENABLED=true
HTTPS_ENABLED=false

# Optimization
BUNDLE_SIZE_LIMIT=1MB
CHUNK_SIZE_LIMIT=500KB
ASSET_SIZE_LIMIT=100KB

# CDN Configuration
CDN_BASE_URL=/
PUBLIC_PATH=/
ASSET_HASH=true